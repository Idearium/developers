{
    "root": true,
    "extends": "airbnb",
    "rules": {
        "import/no-extraneous-dependencies": [2, { "devDependencies": ["**/lib/*.js", "**/test/*.js"] }],
        "indent": [2, 4],
        "no-console": 0,
        "no-param-reassign": [2, { "props": false }],
        "no-underscore-dangle": [2, { "allow": ["_id"] }],
        "padded-blocks": 0
    }
}
